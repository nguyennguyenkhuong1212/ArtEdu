<!-- res/drawable/circle_layer.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer Circle (border only, transparent center) -->
    <item>
        <shape>
            <solid android:color="@android:color/transparent" /> <!-- Transparent center -->
            <size android:width="24dp" android:height="24dp" /> <!-- Outer circle size -->
            <corners android:radius="12dp" /> <!-- Outer circle radius -->
            <stroke android:color="@color/purple" android:width="1dp" /> <!-- Border color and width -->
        </shape>
    </item>
    <!-- Inner Circle -->
    <item
        android:top="3dp"
        android:left="3dp"
        android:bottom="3dp"
        android:right="3dp">
        <shape>
            <solid android:color="@color/purple" /> <!-- Inner circle color -->
            <size android:width="10dp" android:height="10dp" /> <!-- Inner circle size -->
            <corners android:radius="10dp" /> <!-- Inner circle radius -->
        </shape>
    </item>
</layer-list>
